---

import DefaultLayout from '../layouts/DefaultLayout.astro'

import Hero from '../components/Home/Hero.astro'
import About from '../components/Home/About.astro'
import WhyWe from '../components/Home/WhyWe.astro'
import Portfolio from '../components/Home/Portfolio.astro'
import Stats from '../components/Home/Stats.astro'
import Process from '../components/Home/Process.astro'

import { useStoryblokApi } from '@storyblok/astro'
import StoryblokComponent from '@storyblok/astro/StoryblokComponent.astro'

const api = useStoryblokApi()

const { data } = await api.get('cdn/stories/home', {
  version: 'draft',
})

const story = data.story

---

<DefaultLayout>

  <StoryblokComponent blok={story.content} />

  <!-- <Hero />  -->
  <About />
  <WhyWe />
  <Portfolio />
  <Stats />
  <Process />


</DefaultLayout>
