---
import Image from '../../partials/Image.astro';

const { blok } = Astro.props

const { title, teaser, link, image } = blok

---


<a href={ link.cached_url } class="text-gray-800">
    <div class="grid grid-cols-2 gap-4 p-5 border-[1px] border-gray-200 rounded-lg hover:shadow cursor-pointer">
        <div>
            <Image {image} classes="max-w-full" />
        </div>
        <div>
            <h2 class="text-3xl font-bold">{ title }</h2>
            <p class="text-sm text-gray-500">
                { teaser }
            </p>
        </div>
    </div>
</a>