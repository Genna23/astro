---

import { storyblokEditable } from '@storyblok/astro'
import StoryblokComponent from '@storyblok/astro/StoryblokComponent.astro'

const {blok} = Astro.props

const { header, subheader } = blok

---

<section class="py-14" {...storyblokEditable(blok)}>
  <div class="max-w-screen-xl mx-auto px-4 text-gray-600 md:px-8">
    <div class="relative max-w-2xl mx-auto sm:text-center">
      <div class="relative z-10">
        <h3 class="text-gray-800 text-3xl font-extrabold sm:text-4xl">
          { header }
        </h3>
        <p class="mt-3">
          { subheader }
        </p>
      </div>
      <div class="absolute inset-0 max-w-xs mx-auto h-44 blur-[118px]"></div>
    </div>
    <div class="relative mt-12">
      <ul class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
        {
          blok.blocks?.map((blok) => {
              return <StoryblokComponent {blok} />
          })
      }
      </ul>
    </div>
  </div>
</section>
