---

import { storyblokEditable } from '@storyblok/astro'

import Image from '../../partials/Image.astro'

const { blok } = Astro.props

const { image, header, text } = blok

---
<section class="md:py-14" {...storyblokEditable(blok)}>
    <div class="max-w-screen-xl mx-auto md:px-8">
        <div class="items-center gap-x-12 sm:px-4 md:px-0 flex flex-col-reverse lg:flex-row">
            <div class="flex-1 lg:block">
                <Image image = { image } classes="md:max-w-lg sm:rounded-lg"/>
            </div>
            <div class="max-w-xl px-4 space-y-3 mt-6 sm:px-0 md:mt-0 lg:max-w-2xl">
                <h3 class="text-gray-800 text-3xl font-extrabold sm:text-4xl">
                    { header }
                </h3>
                <p class="mt-3 text-gray-600">
                    { text }
                </p>
                <a href="/about" class="inline-flex gap-x-1 items-center text-amber-500 hover:text-amber-500 duration-150 font-medium">
                    Подробнее
                </a>
            </div>
        </div>
    </div>
</section>