---

import { storyblokEditable } from '@storyblok/astro'

import Image from '../../partials/Image.astro'

const { blok } = Astro.props

const { image, header, text } = blok

---
<section class="md:py-14" {...storyblokEditable(blok)}>
    <div class="max-w-screen-xl mx-auto md:px-4">
        <div class="gap-x-12 sm:px-4 md:px-0 flex flex-col-reverse lg:flex-row">
            <div class="lg:block mt-2 lg:mt-0 object-cover">
                <Image image = { image } classes="md:max-w-lg sm:rounded-lg"/>
            </div>
            <div class="max-w-xl space-y-3 mt-6 sm:px-0 md:mt-0 max-w-2xl">
                <h3 class="text-gray-800 text-3xl font-extrabold sm:text-4xl">
                    { header }
                </h3>
                <p class="mt-3 text-gray-600">
                    { text }
                </p>
                <div>
                    <a
          href="/about"
          class="py-2 px-4 text-center text-white font-medium bg-amber-500 hover:bg-amber-400 active:bg-amber-600 rounded-lg hover:shadow-none"
        >
          Подробнее
        </a>
                </div>
            </div>
        </div>
    </div>
</section>