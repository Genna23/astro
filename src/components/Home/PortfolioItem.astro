---

const { article } = Astro.props

const { title, teaser, teaserImage, date, slug } = article.content

import { Icon } from 'astro-icon/components'

import Image from "../../partials/Image.astro";

---

<li class="w-full mx-auto group sm:max-w-sm">
    <a href={`/${slug}`}>
        <Image classes="w-full rounded-lg" image={teaserImage}/>
        <div class="mt-3 space-y-2">
            <span class="flex items-center text-amber-500 text-sm"><Icon name="material-symbols-light:date-range" class="w-5 h-5"/>{ date }</span>
            <h3 class="text-lg text-gray-800 duration-150 group-hover:text-amber-500 font-bold">
                    {title}
            </h3>
            <p class="text-gray-600 text-sm duration-150 group-hover:text-gray-800">
                    { teaser }
            </p>
        </div>
    </a>
</li>
