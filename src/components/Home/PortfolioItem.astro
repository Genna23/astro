---

const { article } = Astro.props

const { title, teaser, image } = article.content

import Image from "../../partials/Image.astro";

---

<li class="w-full mx-auto group sm:max-w-sm">
    <a href={`/blog/${article.slug}`}>
        <Image classes="w-full rounded-lg" {image}/>
        <div class="mt-3 space-y-2">
            <span class="block text-amber-500 text-sm">24.12.2023</span>
            <h3 class="text-lg text-gray-800 duration-150 group-hover:text-amber-500 font-semibold">
                    {title}
            </h3>
            <p class="text-gray-600 text-sm duration-150 group-hover:text-gray-800">
                    { teaser }
            </p>
        </div>
    </a>
</li>
