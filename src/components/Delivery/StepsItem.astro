---
import { Icon } from "astro-icon/components"


const { blok, index, last } = Astro.props

const { step } = blok

---


<li class="flex-1 last:flex-none flex md:items-center">
    <div class="flex gap-x-3">
        <div class="flex items-center flex-col gap-x-2">
            <div
                class="w-8 h-8 rounded-full border-2 flex items-center justify-center"
            >
                <span class="text-amber-900 text-lg">{ index }</span>
            </div>
            <div class="h-12 flex items-center md:hidden text-amber-900">
                <Icon name="material-symbols-light:arrow-circle-down" class={`w-10 h-10 mx-auto ${last ? 'hidden' : ''}`} /> 
            </div>
        </div>
        <div class="h-8 flex items-center md:h-auto">
            <h3 class="text-base font-bold text-amber-900">{ step }</h3>
        </div>
    </div>
    <div class="flex-1 hidden md:block text-amber-900">
        <Icon class={`w-10 h-10 mx-auto ${last ? 'hidden' : ''}`} name="material-symbols-light:arrow-circle-right"/>
    </div>
</li>