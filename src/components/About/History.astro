---
import Image from "../../partials/Image.astro"

import { storyblokEditable } from '@storyblok/astro'

const { blok } = Astro.props

const { title, text, image } = blok
---

<section class="md:py-14" {...storyblokEditable(blok)}>
    <div class="container-wrapper px-4 md:px-8">
        <div class="gap-x-12 sm:px-4 md:px-0 flex flex-col-reverse lg:flex-row">
            <div class="lg:block mt-2 lg:mt-0 object-cover">
                <Image {image} classes="md:max-w-lg sm:rounded-lg lg:rounded-tl-[108px]" />
            </div>
            <div class="max-w-xl space-y-3 mt-6 sm:px-0 md:mt-0 max-w-2xl">
                <h3 >
                    { title }
                </h3>
                <p class="mt-3 text-gray-600">
                { text }
                </p>
                <div>
                </div>
            </div>
        </div>
    </div>
</section>