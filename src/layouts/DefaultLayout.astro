---

import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro';

import '../assets/styles.css'

import Modal from '../components/Modal.astro';
import Contacts from '../components/Contacts.astro';

import { useStoryblokApi } from '@storyblok/astro'

import Meta from '../partials/Meta.astro'

const storyblokApi = useStoryblokApi()
const { data } = await storyblokApi.get('cdn/stories/config', {
  version: 'draft',
  resolve_links: 'url',
})

const content = data?.story?.content

const { seo } = Astro.props
seo.title = seo.title ? `${content.titleOfCompany} - ${seo.title}` : ''
seo.author = content.author || "Henadzi"
seo.url = Astro.url.href

---

<html lang="ru">
	<head>
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
		<link rel="manifest" href="/site.webmanifest">
		<link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
		<meta name="msapplication-TileColor" content="#da532c">
		<meta name="theme-color" content="#ffffff">
		<meta name="generator" content={Astro.generator} />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<Meta {seo}/>
	</head>
	<body ontouchstart="">
		<Header title={content.titleOfCompany} menu={content.menu} />
            <main>
				<slot />
			</main>
			<Contacts />
		<Footer title={content.titleOfCompany} description={content.teaser} copyright={content.copyright} contacts={content.contacts} socialLinksInSection={content.socialLinksInSection} socialLinks={content.socialLinks} menu={content.menu} infoLinks={content.infoLinks}/>
	</body>
</html>

<style is:global>
	html {
		font-size: 20px;
	}

	.stop-scrolling {
		height: 100%;
		overflow: hidden;
	}

	p {
		margin: 10px 0;
	}
</style>